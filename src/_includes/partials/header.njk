<header class="site-header">
  <div class="inner container">
    <a class="logo" href="/" aria-label="{{ site.name }}">
      <span class="word">open</span>
      <span class="word alt">people</span>
      <span class="paren">( )</span>
      <span class="dot" aria-hidden="true"></span>
    </a>
    <nav class="nav" aria-label="Primary">
      <button class="nav__toggle" aria-expanded="false" aria-controls="navmenu">Menu</button>
      <ul id="navmenu" class="nav__list">
        {% for item in nav %}
          <li>
            {% set classes = [] %}
            {% if item.url == '/pages/dashboards/' %}
              {% set _ = classes.push('member-only') %}
            {% endif %}
            {% if item.title | lower == 'members' %}
              {% set _ = classes.push('guest-only') %}
            {% endif %}
            <a href="{{ item.url }}" class="{{ classes | join(' ') }}" {% if page.url == item.url %}aria-current="page"{% endif %}>
              {{ item.title }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </nav>
  </div>
</header>
